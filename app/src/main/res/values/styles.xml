<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">230dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="strokeColor">?attr/colorOnBackground</item>
        <item name="cornerRadius">30dp</item>
        <item name="strokeWidth">1.0dp</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CustomButtonPrimary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">50dp</item>
        <item name="android:paddingEnd">50dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">30dp</item>
        <item name="strokeWidth">1.5dp</item>
        <item name="android:textColor">@color/button_text_selector_white</item>
        <item name="backgroundTint">#776B5D</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>